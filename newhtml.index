<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Your Name | Profile</title>
  <!-- Bootstrap 5 -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeo5sVZ6bWl5y5Zz4E3J2mC1u9gfiQmGmF5Z2tfs4puzjSl"
    crossorigin="anonymous"
  />
  <style>
    body { scroll-behavior: smooth; }
    section { padding: 80px 0; }
    .navbar-nav .nav-link { cursor: pointer; }
  </style>
</head>
<body data-bs-spy="scroll" data-bs-target="#mainNav" data-bs-offset="100" tabindex="0">

  <!-- NAVBAR -->
  <nav id="mainNav" class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="#">Your Name</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navContent"
        aria-controls="navContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navContent">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
          <li class="nav-item"><a class="nav-link" href="#education">Education</a></li>
          <li class="nav-item"><a class="nav-link" href="#awards">Awards</a></li>
          <li class="nav-item"><a class="nav-link" href="#publications">Publications</a></li>
          <li class="nav-item"><a class="nav-link" href="#gallery">Gallery</a></li>
          <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- HERO -->
  <header class="bg-white text-center" style="padding: 160px 0 80px;">
    <div class="container">
      <img src="https://via.placeholder.com/150" alt="Your Photo" class="rounded-circle mb-3" />
      <h1 class="fw-bold">Your Name</h1>
      <p class="lead text-muted">Your Title & Affiliation</p>
    </div>
  </header>

  <!-- ABOUT -->
  <section id="about">
    <div class="container">
      <h2 class="mb-4">About Me</h2>
      <p>
        Write a brief bio here: your background, research interests, current position, etc.
      </p>
    </div>
  </section>

  <!-- EDUCATION -->
  <section id="education" class="bg-light">
    <div class="container">
      <h2 class="mb-4">Education</h2>
      <ul class="list-unstyled">
        <li>
          <h5>Bachelor of Engineering in Civil Engineering</h5>
          <p class="text-muted mb-3">Institute Name, Year</p>
        </li>
        <li>
          <h5>Master of Technology in …</h5>
          <p class="text-muted mb-3">Institute Name, Year</p>
        </li>
        <!-- add more degrees as needed -->
      </ul>
    </div>
  </section>

  <!-- AWARDS & ACHIEVEMENTS -->
  <section id="awards">
    <div class="container">
      <h2 class="mb-4">Awards & Achievements</h2>
      <div class="accordion" id="awardsAcc">
        <div class="accordion-item">
          <h2 class="accordion-header" id="awardOne">
            <button
              class="accordion-button"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseOne"
              aria-expanded="true"
              aria-controls="collapseOne"
            >
              Award / Achievement Title 1
            </button>
          </h2>
          <div
            id="collapseOne"
            class="accordion-collapse collapse show"
            aria-labelledby="awardOne"
            data-bs-parent="#awardsAcc"
          >
            <div class="accordion-body">
              Details about this award or achievement (year, issuing body, etc.).
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <h2 class="accordion-header" id="awardTwo">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseTwo"
              aria-expanded="false"
              aria-controls="collapseTwo"
            >
              Award / Achievement Title 2
            </button>
          </h2>
          <div
            id="collapseTwo"
            class="accordion-collapse collapse"
            aria-labelledby="awardTwo"
            data-bs-parent="#awardsAcc"
          >
            <div class="accordion-body">
              Details about this award or achievement.
            </div>
          </div>
        </div>
        <!-- add more items as needed -->
      </div>
    </div>
  </section>

  <!-- PUBLICATIONS -->
  <section id="publications" class="bg-white">
    <div class="container">
      <h2 class="mb-4">Publications</h2>
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <!-- Publication card -->
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">Paper Title</h5>
              <p class="card-text text-muted">
                Author Names &mdash; Journal / Conference, Year.
              </p>
              <a href="#" class="card-link">View PDF</a>
            </div>
          </div>
        </div>
        <!-- repeat for other publications -->
      </div>
    </div>
  </section>

  <!-- GALLERY -->
  <section id="gallery" class="bg-light">
    <div class="container">
      <h2 class="mb-4">Gallery</h2>
      <div class="row g-3">
        <div class="col-6 col-md-3">
          <img src="https://via.placeholder.com/300" class="img-fluid rounded" alt="Gallery image 1" />
        </div>
        <div class="col-6 col-md-3">
          <img src="https://via.placeholder.com/300" class="img-fluid rounded" alt="Gallery image 2" />
        </div>
        <!-- add more images as needed -->
      </div>
    </div>
  </section>

  <!-- CONTACT -->
  <section id="contact">
    <div class="container">
      <h2 class="mb-4">Contact Me</h2>
      <form action="mailto:your.email@example.com" method="post" enctype="text/plain">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" id="name" class="form-control" placeholder="Your name" required />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" class="form-control" placeholder="you@example.com" required />
        </div>
        <div class="mb-3">
          <label for="message" class="form-label">Message</label>
          <textarea id="message" class="form-control" rows="4" placeholder="Your message…" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
      </form>
    </div>
  </section>

  <!-- FOOTER -->
  <footer class="bg-dark text-white text-center py-3">
    © <span id="year"></span> Your Name
  </footer>

  <!-- Bootstrap JS Bundle (includes Popper) -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeo5sVZ6bWl5y5Zz4E3J2mC1u9gfiQmGmF5Z2tfs4puzjSl"
    crossorigin="anonymous"
  ></script>
  <script>
    // Update footer year
    document.getElementById('year').textContent = new Date().getFullYear()
  </script>
</body>
</html>
